echo ""
echo "🛡️  Pre-commit checks started..."

# Lowercase filename check
node .husky/scripts/check-valid-filenames.js


# Non-ASCII character check
echo ""
node .husky/scripts/check-non-ascii.js

# Check against direct usage of <img> and next/image
echo ""
node .husky/scripts/check-no-img-or-next-image.js

# Run linter
echo ""
echo "🧹 Running ESLint..."
npm run lint || exit 1
echo "✅ Lint passed."

# Optionally run tests
# echo "🧪 Running tests..."
# npm run test || exit 1
# echo "✅ Tests passed."

# Run lint-staged
echo ""
echo "🎯 Running lint-staged for staged files..."
npx lint-staged || exit 1

echo ""
echo "✅ All pre-commit checks passed. Proceeding with commit."

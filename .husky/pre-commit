#!/bin/sh

echo "ğŸ” Running lowercase filename check for JS/TS files..."

# Get staged JS/TS files and avoid breaking on grep no-match
files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|ts|jsx|tsx)$' || true)


if [ -z "$files" ]; then
  echo "âœ… No JS/TS/JSX/TSX files found to check for casing."
else
  echo "ğŸ—‚ï¸  Staged files (.js, .jsx, .ts, .tsx):"
  echo "$files"
  echo "ğŸ” Checking for uppercase letters in filenames..."
  for file in $files; do
    if echo "$file" | grep -q '[A-Z]'; then
      echo "âŒ Error: Uppercase letters found in '$file'. Only lowercase filenames are allowed."
      exit 1
    else
      echo "âœ… $file is lowercase."
    fi
  done
  echo "âœ… All filenames are lowercase"
fi


# Run lint
echo "ğŸš€ Running lint..."
npm run lint
echo "âœ… Linting completed successfully"

# Optionally uncomment if you want to run tests before committing
# echo "ğŸ§ª Running tests..."
# npm run test
# echo "âœ… Tests passed."

# Run lint-staged
echo "ğŸ¯ Running lint-staged..."
npx lint-staged
